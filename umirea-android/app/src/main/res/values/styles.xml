<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@drawable/bottom_navigation</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="weekDayStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">5sp</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FloatButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">@drawable/gradient_button</item>
    </style>


    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">500dp</item>
    </style>


</resources>