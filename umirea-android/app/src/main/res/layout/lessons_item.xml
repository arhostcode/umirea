<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lesson_element"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="20dp"
    android:layout_weight="5"
    android:alpha="1"
    android:background="@drawable/home_element"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_start"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="09.00"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_end"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="10.30"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Системы и алгорвы авы ыв аыв аыв ыв аыва итмы обработки данных "
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сорокин Е.А."
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/note_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/hw_icon" />

        <ImageView
            android:id="@+id/hw_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/note_icon" />

        <ImageView
            android:id="@+id/lesson_type"
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_marginStart="3dp"
            android:src="@drawable/lec_icon" />
    </LinearLayout>


</LinearLayout>